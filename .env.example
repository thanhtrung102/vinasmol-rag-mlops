# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Core Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# MLflow
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:8080
MLFLOW_EXPERIMENT_NAME=vinasmol-rag

# =============================================================================
# Qdrant Vector Database
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=vietnamese_docs

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# =============================================================================
# Model Settings
# =============================================================================
MODEL_NAME=vinai/PhoGPT-4B-Chat
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# =============================================================================
# Hugging Face (optional - for private models)
# =============================================================================
# HF_TOKEN=your_huggingface_token

# =============================================================================
# OpenAI (required for Ragas evaluation)
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# Weights & Biases (optional)
# =============================================================================
# WANDB_API_KEY=your_wandb_api_key
# WANDB_PROJECT=vinasmol-rag

# =============================================================================
# LangFuse (optional - for LLM observability)
# =============================================================================
# LANGFUSE_PUBLIC_KEY=your_public_key
# LANGFUSE_SECRET_KEY=your_secret_key
